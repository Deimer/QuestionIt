<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_post"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardBackgroundColor="@color/cardview_light_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_profile_author"
                android:contentDescription="@string/app_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_width="90dp"
                android:layout_height="110dp" />
            <TextView
                android:id="@+id/lbl_username_author"
                android:text="@string/register_username"
                android:layout_toRightOf="@+id/img_profile_author"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:textColor="@color/primary_text"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/lbl_post_author"
                android:layout_marginTop="4dp"
                android:text="@string/texto"
                android:layout_toRightOf="@+id/img_profile_author"
                android:layout_below="@+id/lbl_username_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>