<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    tools:context="com.ideamos.web.questionit.Fragments.CommentsTab">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lbl_number_comments"
            android:layout_marginTop="10dp"
            android:text="@string/post_number_comments"
            android:textColor="@color/primary_text"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/view_separator"
            android:layout_below="@+id/lbl_number_comments"
            android:background="@color/separator"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_below="@+id/view_separator"
            android:layout_marginBottom="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</FrameLayout>