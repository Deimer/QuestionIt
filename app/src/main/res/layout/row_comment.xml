<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_user_comment"
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            android:scaleType="centerCrop"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            app:border_width="2dp"
            app:border_color="@color/colorPrimaryLight"/>
        <LinearLayout
            android:id="@+id/layout_comment"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/avatar_user_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lbl_username_post"
                android:text="@string/post_username"
                android:textColor="@color/primary_text"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/lbl_comment_post"
                android:layout_marginTop="4dp"
                android:text="@string/texto"
                android:textSize="17sp"
                android:textColor="@color/secondary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_below="@+id/layout_comment"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>

</LinearLayout>